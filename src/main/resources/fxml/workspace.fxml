<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" stylesheets="@../css/assembly-keywords.css" xmlns="http://javafx.com/javafx/8.0.65"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="editor.controller.WorkspaceController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar id="MenuBar">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem accelerator="Shortcut + N" mnemonicParsing="true" onAction="#handleNewFile"
                                          text="New File">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem accelerator="Shortcut + O" mnemonicParsing="true" onAction="#handleOpenFile"
                                          text="Open File">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem accelerator="Shortcut + S" mnemonicParsing="true" onAction="#handleSaveFile"
                                          text="Save">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem accelerator="Shortcut + Shift + S" mnemonicParsing="true"
                                          onAction="#handleSaveAsFile" text="Save As">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem accelerator="Shortcut + ," mnemonicParsing="false" onAction="#handleSettings" text="Settings">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem accelerator="Shortcut + E" mnemonicParsing="false" onAction="#handleExitApp"
                                          text="Exit">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem accelerator="Shortcut + Z" mnemonicParsing="false" onAction="#handleUndo"
                                          text="Undo">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem accelerator="Shortcut + Y" mnemonicParsing="false" onAction="#handleRedo"
                                          text="Redo">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="Y" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem accelerator="Shortcut + X" mnemonicParsing="false" onAction="#handleCut"
                                          text="Cut">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem accelerator="Shortcut + C" mnemonicParsing="false" onAction="#handleCopy"
                                          text="Copy">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem accelerator="Shortcut + V" mnemonicParsing="false" onAction="#handlePaste"
                                          text="Paste">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="V" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Navigate">
                            <items>
                                <MenuItem accelerator="Shortcut + R" mnemonicParsing="false"
                                          onAction="#handleFindAndReplace" text="Find &amp; Replace">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Execute">
                            <items>
                                <MenuItem accelerator="Shortcut + P" mnemonicParsing="false" onAction="#handlePlay"
                                          text="Play">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem mnemonicParsing="false" text="Pause"/>
                                <MenuItem accelerator="Shortcut + S" mnemonicParsing="false" onAction="#handleStop"
                                          text="Stop">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem mnemonicParsing="false" onAction="#handleReset" text="Reset"/>
                                <MenuItem mnemonicParsing="false" onAction="#handleNext" text="Execute Next Line"/>
                                <MenuItem mnemonicParsing="false" onAction="#handlePrevious"
                                          text="Execute Previous Line"/>
                                <MenuItem mnemonicParsing="false" text="Jump To"/>
                            </items>
                        </Menu>
                        <!--<Menu mnemonicParsing="false" text="Window">-->
                        <!--<items>-->
                        <!--<MenuItem mnemonicParsing="false" onAction="#handleWindowConsole" text="Console"/>-->
                        <!--<MenuItem mnemonicParsing="false" onAction="#handleWindowVisualizer" text="Visualizer"/>-->
                        <!--</items>-->
                        <!--</Menu>-->
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Documentation"/>
                                <MenuItem mnemonicParsing="false" onAction="#handleHelpAbout" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar fx:id="toolbarMain">
                    <items>
                        <Button mnemonicParsing="false" onAction="#handleNewFile">
                            <graphic>
                                <FontAwesomeIconView glyphName="FILE_ALT"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleOpenFile">
                            <graphic>
                                <FontAwesomeIconView glyphName="FOLDER_OPEN_ALT"/>
                            </graphic>
                        </Button>
                        <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSaveFile">
                            <graphic>
                                <FontAwesomeIconView glyphName="FLOPPY_ALT"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleUndo">
                            <graphic>
                                <FontAwesomeIconView glyphName="UNDO"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleRedo">
                            <graphic>
                                <FontAwesomeIconView glyphName="REPEAT"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleCut">
                            <graphic>
                                <FontAwesomeIconView glyphName="SCISSORS"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleCopy">
                            <graphic>
                                <FontAwesomeIconView glyphName="FILES_ALT"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handlePaste">
                            <graphic>
                                <FontAwesomeIconView glyphName="CLIPBOARD"/>
                            </graphic>
                        </Button>
                        <Button fx:id="btnPrevious" mnemonicParsing="false" onAction="#handlePrevious">
                            <graphic>
                                <FontAwesomeIconView glyphName="STEP_BACKWARD"/>
                            </graphic>
                        </Button>
                        <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#handlePlay">
                            <graphic>
                                <FontAwesomeIconView glyphName="PLAY"/>
                            </graphic>
                        </Button>
                        <Button fx:id="btnNext" mnemonicParsing="false" onAction="#handleNext">
                            <graphic>
                                <FontAwesomeIconView glyphName="STEP_FORWARD"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleStop">
                            <graphic>
                                <FontAwesomeIconView glyphName="STOP"/>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleReset">
                            <graphic>
                                <FontAwesomeIconView glyphName="REFRESH"/>
                            </graphic>
                        </Button>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label>
                            <graphic>
                                <FontAwesomeIconView glyphName="SEARCH"/>
                            </graphic>
                        </Label>
                        <!--<CustomTextField fx:id="textFieldFind" prefWidth="250.0" />-->
                        <!--<TextField fx:id="textFieldFind" prefWidth="250.0" />-->
                        <Button fx:id="btnFindUp" mnemonicParsing="false" onAction="#handleFindUp">
                            <graphic>
                                <FontAwesomeIconView glyphName="ARROW_UP"/>
                            </graphic>
                        </Button>
                        <Button fx:id="btnFindDown" mnemonicParsing="false" onAction="#handleFindDown">
                            <graphic>
                                <FontAwesomeIconView glyphName="ARROW_DOWN"/>
                            </graphic>
                        </Button>
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>
        <SplitPane fx:id="rootSplitPane" dividerPositions="0.2, 0.8" BorderPane.alignment="CENTER">
            <items>
                <AnchorPane fx:id="registerPane">
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <SplitPane fx:id="editorSplitPane" dividerPositions="0.65" orientation="VERTICAL"
                                   prefHeight="730.0" prefWidth="880.0" AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <items>
                                <AnchorPane fx:id="otherWindowsPane" minHeight="0.0" minWidth="0.0" prefHeight="100.0"
                                            prefWidth="160.0">
                                    <children>
                                        <VBox layoutY="429.0" prefHeight="469.0" prefWidth="878.0"
                                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <children>
                                                <TabPane fx:id="textEditorTabPane" focusTraversable="false"
                                                         prefHeight="730.0" prefWidth="886.0"
                                                         tabClosingPolicy="ALL_TABS"/>
                                                <ToolBar fx:id="toolbarHide">
                                                    <items>
                                                        <Pane HBox.hgrow="ALWAYS"/>
                                                        <Button fx:id="btnHide" mnemonicParsing="false"
                                                                onAction="#handleHide">
                                                            <graphic>
                                                                <FontAwesomeIconView glyphName="DOWNLOAD"/>
                                                            </graphic>
                                                        </Button>
                                                    </items>
                                                </ToolBar>
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                                    <children>
                                        <TabPane fx:id="otherWindowsTabPane" prefHeight="178.0" prefWidth="880.0"
                                                 side="BOTTOM" tabClosingPolicy="UNAVAILABLE"
                                                 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                        </TabPane>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="paneMemory"/>
            </items>
        </SplitPane>
    </center>
</BorderPane>
