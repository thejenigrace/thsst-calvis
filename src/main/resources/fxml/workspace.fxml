<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainEditor.controller.WorkspaceController">
    <top>
        <VBox prefHeight="39.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleNewFile" text="New File" />
                                <MenuItem mnemonicParsing="false" onAction="#handleOpenFile" text="Open File" />
                                <MenuItem mnemonicParsing="false" onAction="#handleSaveFile" text="Save" />
                                <MenuItem mnemonicParsing="false" onAction="#handleSaveAsFile" text="Save As" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#handleExitApp" text="Exit" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Undo" />
                                <MenuItem mnemonicParsing="false" text="Redo" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" text="Cut" />
                                <MenuItem mnemonicParsing="false" text="Copy" />
                                <MenuItem mnemonicParsing="false" text="Paste" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Navigate">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Find" />
                                <MenuItem mnemonicParsing="false" text="Find &amp; Replace" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Execute">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Play" />
                                <MenuItem mnemonicParsing="false" text="Pause" />
                                <MenuItem mnemonicParsing="false" text="Stop" />
                                <MenuItem mnemonicParsing="false" text="Reset" />
                                <MenuItem mnemonicParsing="false" text="Execute Next Line" />
                                <MenuItem mnemonicParsing="false" text="Execute Previous Line" />
                                <MenuItem mnemonicParsing="false" text="Jump To" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Visualize">
                            <items>
                                <MenuItem mnemonicParsing="false" text="HIghlight" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Window">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleTextEditorWindow" text="Text Editor" />
                                <MenuItem mnemonicParsing="false" onAction="#handleConsoleWindow" text="Console" />
                                <MenuItem mnemonicParsing="false" onAction="#handleRegistersWindow" text="Registers" />
                                <MenuItem mnemonicParsing="false" onAction="#handleMemoryWindow" text="Memory" />
                                <MenuItem mnemonicParsing="false" onAction="#handleVisualizerWindow" text="Visualizer" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Documentation" />
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar>
                    <items>
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/open.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/save.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/undo.png);"/>
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/redo.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/cut.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/copy.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/paste.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/find.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/play.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/stop.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/next.png);" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url(/icon/reset.png);" />

                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
</BorderPane>
